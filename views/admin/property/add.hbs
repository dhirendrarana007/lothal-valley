<div class='container'>
  <form action="/admin/property/add" method="post" enctype="multipart/form-data">
    <div class="row">
      <div class="col-md-6">
        <div class="input-group input-group-outline mb-4">
          <label class="form-label">Property Title</label>
          <input type="text"  name="property_title" 
           class="form-control is-invalid form-control-part" 
           value={{#if messages.form1}}
                  {{#each messages.form1 }}
                    {{this.property_title}}
                  {{/each}}
                {{/if}} >

                {{#if messages}}
                  {{#each messages.product_error }}
                    {{#ifErrorCheck this "property_title"}}
                      <div class="invalid-feedback">{{ this.msg }}</div>
                    {{/ifErrorCheck}}
                  {{/each}}
                {{/if}}
        </div>
      </div>
      <div class="col-md-6">
        <div class="input-group input-group-outline mb-4">
          <label class="form-label">Area</label>
          <input type="number"  name="area"
            class="form-control is-invalid form-control-part"
            value={{#if messages.form1}} 
                  {{#each messages.form1 }}
                    {{this.area}}
                  {{/each}}
                {{/if}} >
                
                {{#if messages}}
                  {{#each messages.product_error }}
                    {{#ifErrorCheck this "area"}}
                      <div class="invalid-feedback">{{ this.msg }}</div>
                    {{/ifErrorCheck}}
                  {{/each}}
                {{/if}}
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="input-group input-group-outline mb-4">
            <span class="input-group-text" id="basic-addon1"><a href="/admin"><i class="fa-sharp fa-solid fa-map-pin" ></i></a></span>
            <label class="form-label">Address</label>
            <input type="text" name="address"
             class="form-control is-invalid form-control-part"  aria-label="Username"
             aria-describedby="basic-addon1"
             value={{#if messages.form1}}
                    {{#each messages.form1 }}
                      {{this.address}}
                    {{/each}}
                  {{/if}} >
                  
                  {{#if messages}}
                    {{#each messages.product_error }}
                      {{#ifErrorCheck this "address"}}
                        <div class="invalid-feedback">{{ this.msg }}</div>
                      {{/ifErrorCheck}}
                    {{/each}}
                  {{/if}}
        </div>
      </div>
      <div class="col-md-6">
        <div class="input-group input-group-outline mb-4">
          <label class="form-label">Amount</label>
          <input type="number" name="amount" 
           class="form-control is-invalid form-control-part"
            value={{#if messages.form1}}
                    {{#each messages.form1 }}
                      {{this.amount}}
                    {{/each}}
                  {{/if}} >
                  
                  {{#if messages}}
                    {{#each messages.product_error }}
                      {{#ifErrorCheck this "amount"}}
                        <div class="invalid-feedback">{{ this.msg }}</div>
                      {{/ifErrorCheck}}
                    {{/each}}
                  {{/if}}
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="input-group input-group-outline mb-4">
          <label class="form-label">Min Price</label>
          <input type="number" name="min_price" 
           class="form-control is-invalid form-control-part"
            value={{#if messages.form1}}
                    {{#each messages.form1 }}
                      {{this.min_price}}
                    {{/each}}
                  {{/if}} >
          
                  {{#if messages}}
                    {{#each messages.product_error }}
                      {{#ifErrorCheck this "min_price"}}
                        <div class="invalid-feedback">{{ this.msg }}</div>
                      {{/ifErrorCheck}}
                    {{/each}}
                  {{/if}}
        </div>
      </div>
      <div class="col-md-6">
        <div class="input-group input-group-outline mb-4">
          <label class="form-label">Max Price</label>
          <input type="number" name="max_price"
           class="form-control is-invalid"
            value={{#if messages.form1}}
                    {{#each messages.form1 }}
                      {{this.max_price}}
                    {{/each}}
                  {{/if}} >
          
                  {{#if messages}}
                    {{#each messages.product_error }}
                      {{#ifErrorCheck this "max_price"}}
                        <div class="invalid-feedback">{{ this.msg }}</div>
                      {{/ifErrorCheck}}
                    {{/each}}
                  {{/if}}
        </div>
      </div>
      <div class="col-md-6">
        <div class="input-group input-group-outline mb-4">
          <textarea name="description" placeholder="Description" class="form-control is-invalid ">{{#if messages}}{{#each messages.product_error }}{{#ifErrorCheck this "max_price"}}<div class="invalid-feedback">{{ this.msg }}</div>{{/ifErrorCheck}}{{/each}}{{/if}}</textarea>
          {{#if messages}}
            {{#each messages.product_error }}
              {{#ifErrorCheck this "description"}}
                <div class="invalid-feedback">{{ this.msg }}</div>
              {{/ifErrorCheck}}
            {{/each}}
          {{/if}}
        </div>
      </div>
      <div class="col-md-6">
        <select name="property_type" class="form-control is-invalid" aria-label="Default select example">
          <option  value="" selected>Select Property Type:</option>
            {{#if property_types}}
              {{#each property_types}}
                <option  value="{{this._id}}">{{this.property_type_name}}</option>
              {{/each}}
            {{/if}}
        </select>
        
          {{#if messages}}
            {{#each messages.product_error }}
              {{#ifErrorCheck this "property_type"}}
                <div class="invalid-feedback">{{ this.msg }}</div>
              {{/ifErrorCheck}}
            {{/each}}
          {{/if}}
      </div>
      <div class="col-md-12">
        <div class="fileinput fileinput-new text-center" data-provides="fileinput">
            <div class="fileinput-new thumbnail img-circle img-raised">
              <img src="https://epicattorneymarketing.com/wp-content/uploads/2016/07/Headshot-Placeholder-1.png" rel="nofollow" alt="...">
            </div>
            <div class="fileinput-preview fileinput-exists thumbnail img-circle img-raised"></div>
            <div>
              <span class="btn btn-raised btn-round btn-rose btn-file">
              <span class="fileinput-new">Add Picture</span>
              <span class="fileinput-exists">Change</span>
              <input type="file" name="image" /></span>
              <br />
              <a href="javascript:;" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput"><i class="fa fa-times"></i> Remove</a>
            </div>
        </div>
