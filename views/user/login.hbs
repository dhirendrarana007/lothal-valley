<!-- START SECTION ABOUT -->
	<section class="login-page">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-5 col-md-10 col-12">
					
					<form  class="login" action="/user/login" method="post">
						<h4 class="mb-4">Login</h4>
						{{#if message}}
                    		{{# each message }}
                      			{{#ifErrorCheck this "isUthrized"}}
                      				<div class="alert alert-danger text-light" role="alert">{{ this.msg }}</div>
                      			{{/ifErrorCheck}}
                    		{{/each}}
                  		{{/if}}
						
						<div class="form-group">
							<input type="type" name="email" class="form-control" placeholder="Enter Email ID or Mobile No." id="">
							 {{#if message}}
								{{# each message }}
								{{#ifErrorCheck  this  "email"}}
									<div style="color: red;">{{this.msg}}</div>
								{{/ifErrorCheck}}
								{{/each}}
							{{/if}}
						</div>
						<div class="form-group">
							<input type="password" name="password" class="form-control" placeholder="Password" id="">
							{{#if message}}
								{{# each message }}
								{{#ifErrorCheck  this  "password"}}
									<div style="color: red;">{{ this.msg }}</div>
								{{/ifErrorCheck}}
								{{/each}}
							{{/if}}
						</div>
						<button type="submit" class="btn btn-success btn-block">Submit</button>
						<div class="login-using">
							<p class="m-0">Or login using</p>
							<hr class="m-0">
						</div>
						<div class="social-m">
							<div class="media align-items-center p-3">
								<img src="/assets/img/main/facebook.png" alt="" class="mr-2" style="width:30px;">
								<div class="media-body">
									<h6 class="m-0">Facebook</h6>
								</div>
							</div>
							<div class="media align-items-center p-3">
								<img src="/assets/img/main/google.png" alt="" class="mr-2" style="width:30px;">
								<div class="media-body">
									<h6 class="m-0">Google</h6>
								</div>
							</div>
						</div>
						<div class="footer-login">
							<p class="m-0">New to Magicbricks? <a href="/user/signup" class="text-success"> Sign Up</a></p>
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>